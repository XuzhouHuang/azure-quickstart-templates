{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",

    "contentVersion":"1.0.0.0",

    "parameters":{
        "adminUsername":{
            "type":"string"
        },
        "adminPassword":{
            "type":"securestring"
        }
    },

    "variables":{
        "vnetID":"[resourceId('Microsoft.Network/virtualNetworks','xuhuanVNet')]",
        "subnetRef":"[concat(variables('vnetID'),'/subnets/xuhuanSubnet')]"
    },

    "resources":[
//publicIP
        {
            "type":"Microsoft.Network/publicIPAddresses",
            "apiVersion": "2017-06-01",
            "name":"xuhuanIP",
            "location":"[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod":"Dynamic",
                "dnsSettings":{
                    "domainNameLabel": "myresourcegroupdns1"
                }
            }
        },
//VNET
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "xuhuanVNet",
            "location":"[resourceGroup().location]",
            "properties":{
                "addressSpace":{
                    "addressPrefixes":["10.0.0.0/16"]
                },
                "subnets":[
                    {
                        "name": "xuhuanSubnet",
                        "properties":{
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
//NIC
        {
            "apiVersion": "2017-06-01",
            "type":"Microsoft.Network/networkInterfaces",
            "name":"xuhuanNic",
            "location":"[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses/', 'xuhuanIP')]",
                "[resourceId('Microsoft.Network/virtualNetworks/', 'xuhuanVNET')]"
            ],
            "properties":{
                "ipConfigurations":[
                    {
                        "name": "ipconfig1",
                        "properties":{
                            "privateIPAllocationMethod":"Dynamic",
                            "publicIPAddress":{
                                "id":"[resourceId('Microsoft.Network/publicIPAddresses','xuhuanIP')]"
                            },
                            "subnet":{
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }       
                ]
            }
        },
//VM
        {
            "apiVersion": "2017-03-30",
            "type":"Microsoft.Compute/virtualMachines",
            "name": "xuhuanVM",
            "location":"[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/','xuhuanNic')]"
            ],
            "properties": {
                "hardwareProfile":{"vmSize":"Standard_A3"},
                "osProfile":{
                    "computerName": "xuhuanVM",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile":{
                    "imageReference":{
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk":{
                        "name":"xuhuanOSDisk",
                        "caching":"ReadWrite",
                        "createOperation":"FromImage"
                    }      
                },
                "networkProfile":{
                    "networkInterfaces":[
                        {
                            "id":"[resourceId('Microsoft.Network/networkInterfaces','xuhuanNic')]"
                        }
                    ]
                    
                } 
            }
        }
    ]
}
